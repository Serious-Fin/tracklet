<h1>Create a new post</h1>

<%= form_with model: @post do |f| %>
  <%= f.label :contents %>
  <%= f.text_field :contents %>

  <br />

  <%= f.label :image_url %>
  <%= f.text_field :image_url %>

  <%= f.submit %>
<% end %>

<% @post.errors.full_messages.each do |message| %>
  <div>
    <%= message %>
  </div>
<% end %>