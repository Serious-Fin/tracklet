<div class="self-center border rounded-lg border-black w-2/5 shadow-lg bg-white p-4 flex flex-col">
<% @posts.each do |post| %>
  <div class="bg-gradient-to-r from-sky-100 to-violet-200 border border-black w-full flex flex-col p-4">

    <span class="text-black w-fit flex justify-center gap-4 self-start mb-2">
      <% if post.user.profile_photo.attached? %>
        <%= image_tag post.user.profile_photo.variant(resize_to_limit: [50, 50]), class: "inline rounded-full border border-black" %>
      <% else %>
        <%= image_tag(post.user.gravatar_url, size: '150x150', alt: 'User Avatar', class: "w-[40px] inline rounded-full border border-black") %>
      <% end %>
      <b><%= post.user.name %></b>
    </span>

    <div class="mb-4">
      <%= post.contents %>
    </div>

    <div class="w-fill">
      <% post.photos.each do |photo| %>
      <%= image_tag photo.image_url %>
      <% end %>
    </div>

    <div class="flex gap-1 w-fit">
      <% if post.liked_by_user?(current_user) %>
        <%= button_to dislike_post_url(post), method: :post do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="red" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" />
          </svg>
        <% end %>
      <% else %>
        <%= button_to like_post_url(post), method: :post do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="black" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" />
          </svg>
        <% end %>
      <% end %>

      <%= post.likes.count %> <br \>
    </div>

    
    
    Comments: <br \>

    <% post.comments.each do |comment| %>
      <div>
        <%= comment.user.email %>: <%= comment.contents %>
      </div>
    <% end %>

    
  </div>
  <hr>
<% end %>
</div>
