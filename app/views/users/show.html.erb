<div class="self-center flex flex-col m-auto mt-[3%] space-y-8 border rounded-lg border-black w-1/3 shadow-lg items-center bg-white py-20 px-10">
  <h1 class="font-sans text-4xl font-bold mb-8">Users' Profile</h1>

  <%= image_tag(@user.gravatar_url, size: '150x150', alt: 'User Avatar') %>


  <% if @user.name.present? %>
    Name: <%= @user.name %> <br />
  <% end %>

  Email: <%= @user.email %> <br />

  <% if @user.bio %>
    Bio: <%= @user.bio %> <br />
  <% end %>
</div>

