<div class="self-center border rounded-lg border-black w-1/3 shadow-lg bg-white p-4 flex flex-col">
  <h1 class="font-sans text-4xl font-bold mb-8 self-center">Add friends</h1>
    <% @non_friends.each do |person| %>
      <div class="border border-black flex justify-between items-center mb-4 text-lg bg-gray-100 shadow-sm rounded-md p-2">
        <div>
          <b><%= person.name %></b> <em>(<%= person.email %>)</em>
        </div>

        <form action="<%= friendships_url %>" method="post" class="w-fit">
          <input type="hidden" value="<%= current_user.id %>" name="sender_id">
          <input type="hidden" value="<%= person.id %>" name="receiver_id">
          <input type="Submit" value="Send Invite" class="bg-green-600 p-1 text-white rounded-lg hover:bg-white hover:text-black border-2 border-green-600 transition-all duration-200">
        </form>
      </div>
    <% end %>
</div>
